RUN osversion=$(lsb_release -cs) && \
    cd /tmp/build/nginx && \
    wget https://nginx.org/packages/mainline/debian/pool/nginx/n/nginx/nginx_${NGINX_VERSION}-1~$osversion.debian.tar.xz && \
    tar -xJf nginx_${NGINX_VERSION}-1~$osversion.debian.tar.xz -C ./nginx-${NGINX_VERSION}

RUN sed -i "s#--with-stream_ssl_preread_module#--with-stream_ssl_preread_module --with-http_v2_module --with-http_v3_module --add-module=/tmp/build/module/ngx_http_proxy_connect_module --add-module=/tmp/build/module/nginx_upstream_check_module --add-module=/tmp/build/module/ngx_cache_purge --add-module=/tmp/build/module/ngx_http_substitutions_filter_module --add-module=/tmp/build/module/echo-nginx-module#g" /tmp/build/nginx/nginx-${NGINX_VERSION}/debian/rules 

RUN cd /tmp/build/nginx/nginx-${NGINX_VERSION} && \
    # make clean && \
    dpkg-buildpackage -uc -us -b && \
    ls -la /tmp/build/nginx/  && \
    osversion=$(lsb_release -cs) && \
    mv /tmp/build/nginx/nginx_${NGINX_VERSION}-1~"$osversion"_amd64.deb /tmp/build/nginx/nginx_${NGINX_VERSION}_amd64.deb && \
    dpkg -i /tmp/build/nginx/nginx_${NGINX_VERSION}_amd64.deb

RUN /tmp/build/nginx/nginx-${NGINX_VERSION}/debian/build-nginx/objs/nginx -V


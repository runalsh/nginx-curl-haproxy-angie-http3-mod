FROM buildpack-deps:latest as builder

ENV NGINX_VERSION 1.29.2
ENV NGINX_HTTP_PROXY_CONNECT_MODULE 0.0.7

ARG NGINX_VERSION
ARG NGINX_HTTP_PROXY_CONNECT_MODULE

RUN apt-get update && \
    apt-get --no-install-recommends --no-install-suggests -y install locales wget ca-certificates openssl gnupg2 apt-transport-https unzip make libpcre2-dev zlib1g-dev build-essential devscripts debhelper quilt lsb-release libssl-dev lintian uuid-dev git && \
    rm -rf /var/lib/apt/lists/*

RUN mkdir -p /tmp/build/nginx && \
    cd /tmp/build/nginx && \
    wget -O nginx-${NGINX_VERSION}.tar.gz https://nginx.org/download/nginx-${NGINX_VERSION}.tar.gz && \
    tar -zxf nginx-${NGINX_VERSION}.tar.gz

RUN mkdir -p /tmp/build/module && \
    cd /tmp/build/module && \
    git clone --depth=1 https://github.com/chobits/ngx_http_proxy_connect_module.git /tmp/build/module/ngx_http_proxy_connect_module && \
    git clone --depth=1 https://github.com/yaoweibin/nginx_upstream_check_module /tmp/build/module/nginx_upstream_check_module && \
    git clone --depth=1 https://github.com/FRiCKLE/ngx_cache_purge.git /tmp/build/module/ngx_cache_purge && \
    git clone --depth=1 https://github.com/yaoweibin/ngx_http_substitutions_filter_module /tmp/build/module/ngx_http_substitutions_filter_module && \
    git clone --depth=1 https://github.com/openresty/echo-nginx-module /tmp/build/module/echo-nginx-module

RUN cd /tmp/build/nginx/nginx-${NGINX_VERSION} && \
    patch -p1 < /tmp/build/module/ngx_http_proxy_connect_module/patch/proxy_connect_rewrite_102101.patch


FROM debian:13-slim

ENV NGINX_VERSION 1.29.2
ENV NGINX_HTTP_PROXY_CONNECT_MODULE 0.0.7

ARG NGINX_VERSION
ARG NGINX_HTTP_PROXY_CONNECT_MODULE

RUN apt-get update && \
    apt-get --no-install-recommends --no-install-suggests -y install libssl-dev && \
    rm -rf /var/lib/apt/lists/*

COPY --from=builder /tmp/build/nginx/nginx_${NGINX_VERSION}_amd64.deb /tmp/nginx_${NGINX_VERSION}_amd64.deb
RUN dpkg -i /tmp/nginx_${NGINX_VERSION}_amd64.deb

RUN nginx -V; nginx -t

CMD ["nginx", "-g", "daemon off;"]   
